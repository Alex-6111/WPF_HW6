<Window x:Class="WPF_HW6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:materialDesign1="http://schemas.microsoft.com/netfx/2009/xaml/presentation" 
        xmlns:materialDesign2="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:materialDesign3="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.Resources>
        <Style TargetType="materialDesign:Button">
            <Setter Property="Background" Value="{StaticResource MaterialDesignLightBluePrimaryColor}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource MaterialDesignLightGreenAccentColor}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <materialDesign:Button Content="Click me" Height="50" Width="100"/>
    </Grid>
</Window>